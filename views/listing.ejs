    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for (let x of allListings) { %>
            <div class="col">
                <a href="/listings/<%=x._id%>" class="listing_link">
                    <div class="card">
                        <img src="<%=x.image%>" class="card-img-top" alt="<%= x.title %>" style="height: 18rem;">
                        
                        
                        <div class="card-img-overlay"> </div>
                        
                        
                        <div class="card-body">
                            <p class="card-text">
                                <b><%= x.title %></b>
                                <br>
                                &#2547; <%= x.price.toLocaleString("en-US") %> /night
                            </p>
                        </div>
                    </div>
                </a>
            </div>
         <% }  %>
    </div>
    


</body>
